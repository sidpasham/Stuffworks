<!DOCTYPE html>
<html lang="en">
<head>
    <title>StuffWorks</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/LayoutMaster.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("styles", false)
</head>

@*Menu Bar*@
<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="60">
    <div class="row"  style="background-color:#5ccaca">
        <div class="form-inline">
            <div class="col-xs-3 text-center" style="text-align:center">
                <a class="navbar-brand" href="#" onclick="location.href='@Url.Action("Index","Home")'">
                    <img style="padding-top:0px; margin-top:-22px;" src="~/Images/logo.png" />
                </a>
            </div>
            <div class="col-xs-6">
                <div class="input-group"  style="padding-top:0px; margin-top:5px;">
                    <input type="text" class="form-control" placeholder="Search" style="width:500px; height:40px"/>
                    <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                </div>
            </div>
        </div>

    </div>
    <nav class="navbar navbar-default ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav col-xs-8">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" onclick="location.href='@Url.Action("Index","Home")'">Services</a>
                        <ul class="dropdown-menu mega-dropdown-menu" style="background-color:#008b8b; font-family:Arial, Helvetica, sans-serif ">
                            <li><a href="#" onclick="location.href='@Url.Action("Index","Celebrate")'">Celebrate</a></li>
                            <li><a href="#">Service</a></li>
                            <li><a href="#">Hire</a></li>
                            <li><a href="#">Donate</a></li>
                        </ul>
                    </li>   
                </ul>
                <ul class="nav navbar-nav col-xs-4">
                    <li><a href="#" onclick="location.href='@Url.Action("Index","AboutUs")'">About</a></li>
                    <li><a href="#" onclick="location.href='@Url.Action("Index","ContactUs")'">Contact</a></li>
                    <li>
                        @{
                            Html.RenderPartial("_LoginPartial");
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @*Body of Page*@
    <div class="container body-content">
        @RenderBody()
    </div>
    <br />
    @*Footer Section*@
    <div class="text-center">
        <footer>
            <p>©StuffWorks</p>
        </footer>
    </div>
</body>
</html>
