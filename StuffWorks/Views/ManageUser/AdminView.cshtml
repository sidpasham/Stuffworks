<br />
<br />

<div class="container">
    <h2 style="text-align:center">Welcome Admin!</h2>
    <div class="row">
        <div class="col-md-4" align="right">
            <button type="button" class="btn" style="height:100px; width:220px" onclick="showusertable()"><h3>Get Users</h3></button>
        </div>
        <div class="col-md-4" align="center">

            <button type="button" class="btn" style="height:100px; width:220px" onclick="showstuffertable()"><h3>Get Stuffers</h3></button>
        </div>
        <div class="col-md-4" align="left">
            <button type="button" class="btn" style="height:100px; width:220px" onclick="showservicetable()"><h3>Get Services</h3></button>
        </div>
    </div>
</div>
<br />
<div id="viewusertable" style="display:none; font-size:12px">
    <table class="table table-bordered" style="text-align:center">
        <thead>
            <tr>
                @foreach (System.Data.DataColumn col in Model.dtusers.Columns)
            {
                    <th style="text-align:center">@col.Caption</th>
                }
                <th colspan="2" style="text-align:center">
                    Manage User
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow row in Model.dtusers.Rows)
            {
                <tr>
                    @foreach (var cell in row.ItemArray)
                {
                        <td>@cell.ToString()</td>

                    }
                    <td>
                        <button type="button" class="btn" style="height:30px; width:120px; font-size:12px"><p>Delete</p></button>
                    </td>
                    <td>
                        <button type="button" class="btn" style="height:30px; width:120px; font-size:12px" data-toggle="modal" data-target="#ViewUpdateUser"><p>View/Update</p></button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
<div id="viewstuffertable" style="display:none; font-size:12px">
    <table class="table table-bordered" style="text-align:center">
        <thead>
            <tr>
