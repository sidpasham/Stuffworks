                    </td>
                    <td>
                        <button type="button" class="btn" style="height:30px; width:120px; font-size:12px" onclick="showservicetable()"><p>View/Update</p></button>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

<div class="modal fade" id="ViewUpdateUser" role="dialog">
    <div class="modal-dialog">
        <br />
        <br />
        <br />
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="text-align:center"><strong>View/Update User</strong></h4>
            </div>
            <div class="modal-body">
                @{
                    Html.RenderPartial("UpdateUserView", new StuffWorks.Models.ManageUserDetails());
                }
            </div>
            @*<div class="modal-footer">
              </div>*@
        </div>
    </div>
</div>
